<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.test.domain">
	<!-- 定义Product实体 -->
	<class name="Product" table="store_product">
		<!-- 定义主键及其生成策略 -->
		<id name="id" column="id" type="long">
			<generator class="increment" />
		</id>
		<!-- 定义商品名称字段 -->
		<property name="name" not-null="true" length="32" column="name"/>
		<!-- 定义商品描述字段 -->
		<property name="description" length="500" column="description" />
		<!-- 定义价格字段 -->
		<property name="price" type="double" column="price"></property>
		<!-- 定义图片地址字段 -->
		<property name="imageSrc" column="imageSrc"></property>
	</class>
</hibernate-mapping>